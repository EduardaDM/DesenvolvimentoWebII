package service;

import java.util.List;

import javax.jws.WebMethod;
import javax.jws.WebService;

import javax.jws.soap.SOAPBinding;
import javax.jws.soap.SOAPBinding.Style;

import model.Locadora;
import model.Veiculo;

@WebService
@SOAPBinding(style = Style.RPC)
public interface LocadoraService {

    @WebMethod
    void create(Locadora locadora);

    @WebMethod
    Locadora read(int id);

    @WebMethod
    List<Locadora> readAll();
    //fazer uma string com toString para ele imprimir a lista de locadoras, 
    //tanto nesse quanto no veiculos OU fazer uma classe para fazer a lista de veiculos
    //e outra para a lista de locadoras

    @WebMethod
    void update(Locadora locadora);

    @WebMethod
    void delete(int id);

    @WebMethod
    void addVeiculo(int locadoraId, Veiculo veiculo);

    @WebMethod
    List<Veiculo> getAllVeiculos(int locadoraId);
}
